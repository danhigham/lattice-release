set -e

mkdir -p ${BOSH_INSTALL_TARGET}/src
cp -a . ${BOSH_INSTALL_TARGET}/src

mv ${BOSH_INSTALL_TARGET}/src/github.com/gogo/protobuf_for_rep \
  ${BOSH_INSTALL_TARGET}/src/github.com/gogo/protobuf

export GOPATH=$BOSH_INSTALL_TARGET

export GOROOT=$(readlink -nf /var/vcap/packages/golang_1.4)
export PATH=$GOROOT/bin:$PATH
go install github.com/cloudfoundry-incubator/rep/cmd/rep

# clean up source artifacts
rm -rf ${BOSH_INSTALL_TARGET}/src ${BOSH_INSTALL_TARGET}/pkg
